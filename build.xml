<project name="MMurder" default="build" basedir=".">
  <description>
    Trade Core project
  </description>
  
  <property name="client" location="client"/>
  <property name="server" location="server"/>
  <property name="assets" location="server/assets/"/>
  <property name="model"  location="server/model/"/>
  
  <target name="build" depends="server_build">
    <tstamp/>
    <echo>Start building project</echo>
  </target>

  <target name="server_build">
    <tstamp/>
    <echo>Start building server</echo>
    <exec dir="${server}/cli/" executable="php.exe">
      <arg value="db_build.php"/>
      <arg value="${assets}"/>
      <arg value="db.json"/>
      <arg value="${model}"/>
    </exec>
  </target>

</project>